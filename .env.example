MULTICHAIN_RPC_PORT='porta_rpc_da_sua_chain'
MULTICHAIN_RPC_USER='rpc_user_da_sua_chain'
MULTICHAIN_RPC_PASSWORD='sua_rpc_password_da_sua_chain'

